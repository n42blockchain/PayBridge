# Wallet Encryption (32 bytes base64 encoded)
WALLET_MASTER_KEY_V1=your_base64_32_bytes_key_change_in_production

# Cashier Gateway
CASHIER_BASE_URL=http://localhost:3003/cashier

# 2FA
TWO_FACTOR_APP_NAME=PayBridge
